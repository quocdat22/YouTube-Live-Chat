{
  "manifest_version": 3,
  "name": "YouTube Live Chat Fullscreen",
  "version": "1.0",
  "description": "Display YouTube Live Chat in fullscreen mode",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["modules/*.js"],
    "matches": ["*://*.youtube.com/*"]
  }]
}