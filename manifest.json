{
  "manifest_version": 3,
  "name": "YouTube Live Chat Fullscreen",
  "version": "1.0",
  "description": "Display YouTube Live Chat in fullscreen mode",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "css": ["popup.css"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}